<Window x:Class="OOP5._2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOP5._2"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="900">
    <Grid x:Name="grid">
        <TextBox x:Name="textBoxSurname" HorizontalAlignment="Left" Height="23" Margin="10,38,0,0" TextWrapping="Wrap" Text="Фамилия" VerticalAlignment="Top" Width="172"/>
        <TextBox x:Name="textBoxJob" HorizontalAlignment="Left" Height="23" Margin="10,66,0,0" TextWrapping="Wrap" Text="Должность" VerticalAlignment="Top" Width="172"/>
        <TextBox x:Name="textBoxInfo" HorizontalAlignment="Left" Height="23" Margin="10,94,0,0" TextWrapping="Wrap" Text="Статус" VerticalAlignment="Top" Width="172"/>
        <TextBox x:Name="textBoxName" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="Имя" VerticalAlignment="Top" Width="172"/>
        <Button x:Name="buttonImage" Content="Выбрать изображение" HorizontalAlignment="Left" Margin="10,122,0,0" VerticalAlignment="Top" Width="172" Click="ButtonImage_Click"/>
        <Button x:Name="buttonOk" Content="Ok" HorizontalAlignment="Left" Margin="56,147,0,0" VerticalAlignment="Top" Width="75" Click="ButtonOk_Click"/>
    </Grid>
</Window>
